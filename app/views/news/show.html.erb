<div class="container">
  <div class="col-md-9">
    <div class="feature-post">
      <div class="feature-img">
        <img src="images/img-03_002.jpg" class="img-responsive" alt="#" />
      </div>
      <div class="feature-cont">
        <div class="post-people">
          <div class="left-profile">
            <div class="post-info">
              <img src="images/profile-img.png" alt="#" />
              <span>
                <h4><%= t("news.show.by", person: @new.user_name)%></h4>
                <h5><%= t("news.show.on_date", date: l(@new.created_at, format: :short)) %></h5>
              </span>
            </div>
            <span class="share"></span>
          </div>
        </div>
        <div class="post-heading">
          <h3><%= @new.title %></h3>
          <p><%= @new.content %></p>
        </div>
        <div class="fb-share-button" data-href="<%= news_url(id: params[:id]) %>" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a target="_blank" href="<%= news_url(id: params[:id]) %>" class="fb-xfbml-parse-ignore"><%= t("news.show.share") %></a></div>
      </div>
      <div class="commant-section">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <h3><%= t("news.show.comments", href: @new.comments.count) %></h3>
          <div class="div-create">
            <%= render partial: "comment", collection: @comments %>
            <a href="#" id="loadMore"><%= t("comments.show.load_more") %></a>
            <a href="#" id="showLess"><%= t("comments.show.show_less") %></a>
          </div>
        </div>
      </div>
      <div class="commant-section">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <% if user_signed_in? %>
            <h3><%= t("comments.show.leave_comment") %></h3>
            <div class="form-command row">
              <div class="ajax-form-create">
                <%= render "comments/form" %>
              </div>
            </div>
          <% else %>
          <h3><%= t("news.show.must_log") %></h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
