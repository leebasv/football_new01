<section id="top">
  <header>
    <div class="container">
      <div class="header-top">
        <div class="row">
          <div class="col-md-6">
            <div class="full">
              <div class="logo">
                <%= link_to image_tag("logo.png"), root_path %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="right_top_section">
              <% if user_signed_in? %>
                <li><%= link_to t("layouts.header.users"), "#" %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t("layouts.header.account") %><b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to t("layouts.header.profile"), current_user %></li>
                    <li><%= link_to t("layouts.header.settings"), edit_user_password_path(current_user) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t("layouts.header.log_out"), destroy_user_session_path,
                        method: :delete %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <ul class="login">
                  <li class="login-modal">
                    <%= link_to new_user_session_path do %>
                      <i class="fa fa-user"></i>
                      <%= t "shared.home.top.login" %>
                    <% end %>
                  </li>
                  <li>
                    <div class="cart-option">
                      <%= link_to new_user_registration_path do %>
                        <i class="fa fa-shopping-cart"></i>
                        <%= t "shared.home.top.register" %>
                      <% end %>
                    </div>
                  </li>
                </ul>
              <% end %>
              <!-- button section -->
              <!-- end button section -->
            </div>
          </div>
        </div>
      </div>
      <div class="header-bottom">
        <div class="row">
          <div class="col-md-12">
            <div class="full">
              <div class="main-menu-section">
                <div class="menu">
                  <nav class="navbar navbar-inverse">
                    <div class="navbar-header">
                      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
                      <span class="sr-only"><%= t "shared.home.top.toggle" %></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="#"><%= t "shared.home.top.menu" %></a>
                    </div>
                    <div class="collapse navbar-collapse js-navbar-collapse">
                      <ul class="nav navbar-nav">
                        <li>
                          <%= link_to root_path do %>
                            <%= t "shared.home.top.home" %>
                          <% end %>
                        </li>
                        <li><a href="about.html">
                          <%= t "shared.home.top.about" %>
                          </a>
                        </li>
                        <li><%= link_to t("shared.home.top.team"), teams_path %></li>
                        <li>
                          <%= link_to t("shared.home.top.news"), news_index_path %>
                        </li>
                        <li>
                          <%= link_to leagues_path do %>
                            <%= t "shared.home.top.rankings" %>
                          <% end %>
                        </li>
                        <li>
                          <%= link_to matches_path do %>
                            <%= t "shared.home.top.match" %>
                          <% end %>
                        </li>
                      </ul>
                    </div>
                    <!-- /.nav-collapse -->
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
</section>
