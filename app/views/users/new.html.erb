<% provide(:title, t("users.sign_up")) %>
<h1>Sign up</h1>
<%= stylesheet_link_tag "form" %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
    <%= render "shared/error_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t("users.confirmation") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t("users.create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
